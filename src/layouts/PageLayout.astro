---
import { Head } from "astro-capo";
// @ts-ignore
import { SEO } from "astro-seo";
import PostHog from "@components/posthog.astro";
// styles
import "@/styles/reset.css";
import "@/styles/global.css";
import "@/styles/typography.css";

// components
import Footer from "@components/Footer.astro";
import Nav from "@components/Nav.astro";
import Sidebar from "@components/Sidebar.astro";
const { title, path } = Astro.props;

let seoTitle = "@iammatthias";
if (title || path) {
  seoTitle = "";
  if (title) {
    seoTitle += `${title} | `;
  }
  if (path) {
    seoTitle += `${path.charAt(0).toUpperCase() + path.slice(1)} | `;
  }
  seoTitle += "@iammatthias";
}

const base_url = Astro.url.origin;

let seoImage = `${base_url}/api/og.png`;

if (title || path) {
  if (path) {
    seoImage = `${base_url}/api/og-${path}.png`;
  }
  if (title && path) {
    seoImage = `${base_url}/api/og-${path}-${encodeURIComponent(title)}.png`;
  }
}
---

<html lang='en'>
  <Head>
    <SEO
      charset='UTF-8'
      title={seoTitle}
      description='A digital garden where photographs, recipes, and thoughts can grow.'
      openGraph={{
        basic: {
          title: seoTitle,
          type: "website",
          image: seoImage,
        },
        optional: {
          description: "A digital garden where photographs, recipes, and thoughts can grow.",
        },
      }}
      twitter={{
        creator: "@iammatthias",
        card: "summary_large_image",
        image: seoImage,
        title: seoTitle,
        description: "A digital garden where photographs, recipes, and thoughts can grow.",
      }}
      extend={{
        link: [
          {
            rel: "icon",
            href: "data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20100%20100%22%3E%3Ctext%20y%3D%22.9em%22%20font-size%3D%2290%22%3E%F0%9F%8C%9E%3C%2Ftext%3E%3C%2Fsvg%3E",
          },
          {
            rel: "sitemap",
            type: "application/xml",
            href: "/sitemap-index.xml",
          },
        ],
        meta: [
          {
            name: "viewport",
            content: "width=device-width, initial-scale=1",
          },
          {
            name: "generator",
            content: "Astro",
          },
        ],
      }}
    />
    <PostHog />
  </Head>
  <body>
    <Nav />
    <div class='page-layout'>
      <Sidebar />
      <main>
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>

<style>
  :root {
    --nav-height: 45px;
    --footer-height: 45px;
    --aside-width: 45px;
    --article-max-width: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    position: relative;
  }

  .page-layout {
    display: flex;
    flex-direction: row;
  }

  main {
    position: relative;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;

    position: relative;
    padding: 1rem;
  }

  /* Ensure article container respects max width */
  .article-container {
    width: 100%;
    max-width: var(--article-max-width);
    margin: 0 auto;
    overflow-x: hidden;
  }

  /* Handle pre elements within article container */
  .article-container pre {
    max-width: 100%;
    overflow-x: auto;
    white-space: pre;
    word-wrap: normal;
    margin: 1em 0;
    padding: 1em;
    background: var(--theme-code-background);
    border-radius: 4px;
  }

  /* Ensure code blocks don't cause horizontal scroll on the page */
  .article-container pre code {
    display: block;
    overflow-x: auto;
    white-space: pre;
    word-wrap: normal;
  }

  /* Prevent transition conflicts with nav/sidebar */
  nav,
  aside {
    z-index: 100;
    position: relative;
  }
</style>

<script is:inline type='module' src='https://cdn.jsdelivr.net/npm/lite-vimeo-embed/+esm'></script>
