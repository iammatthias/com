<style>
  main {
    justify-content: end;
  }
  h1 {
    text-align: center;
    line-height: 1.25;
  }
  details {
    position: relative;
    display: inline-block;
    vertical-align: top; /* Keeps the details aligned at the top when inline */
    list-style: none; /* Removes the list style */
    padding: 0; /* Removes the padding */
    inset: 0;
  }

  details[open] > *:not(summary) {
    position: absolute;
    border: 1px solid var(--foreground);
    border-radius: 1rem;
    background-color: var(--background);
    color: var(--foreground);
    width: 100%; /* Or set a specific width */
    max-width: 100%; /* Limits the width */
    padding: 1rem; /* Add some padding */
    z-index: 2; /* High index to ensure it's above other content */
    right: 0;
    box-shadow:
      0px 10px 15px -3px rgba(0, 0, 0, 0.1),
      0px 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  details summary {
    list-style: none; /* Removes the list style */
    padding: 0; /* Removes the padding */
    cursor: pointer; /* Add a pointer to the cursor */
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details:hover {
    cursor: pointer;
  }

  details[open] summary ~ * {
    animation: open 0.3s ease-in-out;
  }

  details div {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1rem;
    width: fit-content;
    margin-left: auto;
    text-align: center;
  }

  details a {
    margin: 0;
    padding: 0;
    font-size: var(--fs-sm);
    font-weight: 600;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
    border: none;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: var(--fs-h2);
    }
    details div {
      grid-template-columns: 1fr 1fr;
    }
  }

  @keyframes open {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
