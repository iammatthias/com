<nav x-data='{ open: false }' @mouseover='open = true' @mouseout='open = false' @touchstart='open = !open'>
  <details x-bind:open='open'>
    <summary><p>Menu</p></summary>
    <p><a href='/'>Home</a></p>
    <p><a href='/photographs'>Photographs</a></p>
    <p><a href='/posts'>Posts</a></p>
    <p><a href='/recipes'>Recipes</a></p>
    <p><a href='/notes'>Notes</a></p>
  </details>
</nav>

<style>
  nav {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translate(-50%, 0);
    width: fit-content;
    padding: 1rem 2rem;
    align-self: center;
    border: 1px solid var(--foreground);
    border-radius: 3rem;
    background-color: var(--background);
    color: var(--foreground);

    text-align: center;
    z-index: 1000;
    box-shadow:
      0px 10px 15px -3px rgba(0, 0, 0, 0.1),
      0px 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  p,
  a {
    margin: 0;
    padding: 0;
    font-size: var(--fs-sm);
    font-weight: 600;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
  }

  details {
    position: relative;
    padding: 0;
    list-style: none;
    vertical-align: top;
  }

  details summary {
    padding: 0;
    cursor: pointer;
    list-style: none;
  }

  details summary p {
    font-family: "Kalnia Variable";
    font-weight: 900;
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details[open] summary ~ * {
    animation: open 0.3s ease-in-out;
  }

  details[open] summary {
    border-bottom: 2px solid var(--text-link);
  }

  details > *:not(summary) {
    margin-top: 1rem;
  }

  details:not([open]) a {
    pointer-events: none;
  }

  details[open] a {
    pointer-events: auto;
  }

  @keyframes open {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
