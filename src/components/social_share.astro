---
import Twitter from "./social_share/twitter.astro";
import Warpcast from "./social_share/warpcast.astro";
import Threads from "./social_share/threads.astro";
---

<div class='share-button__wrapper'>
  <p>Share on</p>
  <Twitter via='iammatthias' />
  <!-- <button
    class='share-button'
    data-platform='twitter'
    data-url='https://twitter.com/intent/tweet?text={text}&url={url}'
  >
    Twitter
