---
import { Image } from "astro:assets";

interface Post {
  image1024x1024: string;
  description: string;
  friendly_id: string;
  width: number;
  height: number;
}

const { limit, offset } = Astro.props;

const response = await fetch(
  `https://glass.photo/api/v2/users/iam/posts?limit=${limit ? limit : 5}&offset=${offset ? offset : 0}`
);
const data = await response.json();
const posts = data.map((post: Post) => {
  const { image1024x1024, description, friendly_id, width, height } = post;
  return { image1024x1024, description, friendly_id, width, height };
});
---

<div class='masonry' x-data x-masonry>
  {
    posts.map((post: Post) => (
      <Image
        src={post.image1024x1024}
        inferSize
        alt={post.description ? post.description : post.friendly_id}
        loading='eager'
      />
    ))
  }
</div>

<script>
  import Alpine from "alpinejs";
  import masonry from "alpinejs-masonry";

  Alpine.plugin(masonry);
</script>

<style>
  .masonry {
    display: grid;
    grid-gap: 2rem;
    align-items: flex-start;
    img {
      width: 100%;
      height: auto;
      display: block;
      border: 1px solid #1a1a1a;
      border-radius: 1rem;
      z-index: 1;
    }
  }

  /* Large devices (desktops, 992px and up) */
  @media (min-width: 992px) {
    .masonry {
      grid-template-columns: repeat(5, minmax(0, 1fr));
    }
  }

  /* Medium devices (tablets, 768px and up) */
  @media (min-width: 768px) and (max-width: 991px) {
    .masonry {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  /* Small devices (landscape phones, 576px and up) */
  @media (min-width: 576px) and (max-width: 767px) {
    .masonry {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  /* Extra small devices (portrait phones, less than 576px) */
  @media (max-width: 575px) {
    .masonry {
      grid-template-columns: repeat(1, minmax(0, 1fr));
      grid-gap: 1rem;
    }
  }
</style>
