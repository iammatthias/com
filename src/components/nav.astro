<style>
  nav {
    left: 50%;
    transform: translate(-50%, 0);
    bottom: 2rem;
    margin: 0 auto;
    position: fixed;
    width: fit-content;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    align-self: center;
    border: 1px solid var(--foreground);
    border-radius: 3rem;
    background-color: var(--background);
    color: var(--foreground);
    z-index: 1000;
  }

  nav::before {
    content: "";
    pointer-events: none;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 1;
    border-radius: 3rem;
    box-shadow:
      0px 10px 15px -3px rgba(0, 0, 0, 0.1),
      0px 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  p,
  a {
    margin: 0;
    padding: 0;
    font-size: var(--fs-sm);
    font-weight: 600;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
    border: none;
  }

  .desktop {
    display: flex;
  }

  .mobile {
    display: none;
    text-align: center;
    vertical-align: bottom;
  }

  @media (max-width: 1024px) {
    nav {
      padding: 0.75rem 1.5rem;
      gap: 1.5rem;
    }
    .desktop {
      display: none;
    }

    .mobile {
      display: flex;
    }
  }

  @media (max-width: 768px) {
    nav {
      padding: 0.5rem 1rem;
      gap: 1rem;
    }
  }

  details {
    vertical-align: top;
    list-style: none;
    padding: 0;
    inset: 0;

    position: relative;
  }

  details summary {
    list-style: none;
    padding: 0;
    cursor: pointer;
    bottom: 0;
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details:hover {
    cursor: pointer;
  }

  details[open] summary ~ * {
    animation: open 0.3s ease-in-out;
  }

  details[open] summary {
    border-bottom: 2px solid var(--text-link);
  }

  details > *:not(summary) {
    margin-top: 1rem;
  }
</style>
