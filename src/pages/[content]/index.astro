---

<Layout>
  <main>
    <h1>{contentType}</h1>
    <ul>
      {
        entries.map((entry) => (
          <li>
            <h1>
              <a href={`/${contentType}/${entry.frontmatter.slug}`}>{entry.frontmatter.title}</a>
            </h1>
            <p>
              <small>{entry.frontmatter.created}</small>
            </p>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style>
  h1 {
    font-size: var(--fs-h2);
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    ul {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    ul {
      gap: 1rem;
    }
  }
