<style>
  details {
    display: inline-block;
    vertical-align: top; /* Keeps the details aligned at the top when inline */
    text-align: right;
    list-style: none; /* Removes the list style */
    padding: 0; /* Removes the padding */
  }

  details summary {
    list-style: none; /* Removes the list style */
    padding: 0; /* Removes the padding */
  }

  details:hover {
    cursor: pointer;
  }

  details[open] summary ~ * {
    animation: open 0.3s ease-in-out;
  }

  details div {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    width: fit-content;
    margin-left: auto;
  }

  @keyframes open {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
