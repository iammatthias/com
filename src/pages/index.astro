  <div class='background'>
    <Image
      inferSize
      loading='eager'
      decoding='async'
      alt='fullscreen background'
      src='https://wsrv.nl/?url=https://pub-ba3d6ef16e5c44b7b4b89835777f6653.r2.dev/assets/3c2b662eee2940e019212ab9d40c16d9.png'
    />
