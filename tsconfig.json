{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@data/*": ["src/data/*"],
      "@styles/*": ["src/styles/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["*.astro", "*.ts", "additional.d.ts"]
}
