---
import { Image } from "astro:assets";
const { src, alt } = Astro.props;
---

<Image src={src} inferSize alt={alt} loading='lazy' decoding='async' />

<style>
  img {
    position: relative;
    width: 100%;
    height: auto;
    display: block;
    border: 1px solid var(--foreground);
    border-radius: 1rem;
    z-index: 1;
    box-shadow:
      0px 10px 15px -3px rgba(0, 0, 0, 0.1),
      0px 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
</style>
