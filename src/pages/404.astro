---
// layout
import PageLayout from "@/layouts/PageLayout.astro";
import RecentContent from "@/components/RecentContent.astro";
---

<PageLayout path='Social'>
  <main>
    <div>
      <h1>404</h1>
      <p>Page not found.</p>
      <p>You don't have to go home, but you can't stay here.</p>
    </div>
    <RecentContent showTags={true} showGlass={true} contentLimit={16} />
  </main>
</PageLayout>

<style>
  main {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, 350px), 1fr));
    min-height: calc(100vh - var(--nav-height) - var(--footer-height) - 4px);
    overflow: hidden;
    align-content: start;
    align-items: start;
    gap: 1px;
  }

  main > :global(*):not(.glass-content) {
    aspect-ratio: 6/7;
    min-height: 0;
    min-width: 0;
    outline: var(--border);
    padding: var(--padding);
    @media (max-width: 768px) {
      /* &:first-child {
        aspect-ratio: unset;
      } */
      aspect-ratio: 7/6;
    }
  }

  main > div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
