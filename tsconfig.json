{
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true, // add if using `base` template
    "allowJs": true, // required, and included with all Astro templates
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/styles/*": ["src/styles/*"],
      "@/lib/*": ["src/lib/*"]
    }
  }
}
